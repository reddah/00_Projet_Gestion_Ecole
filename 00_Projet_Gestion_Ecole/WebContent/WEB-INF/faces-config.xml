<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!--++++++ CONFIGURATION DE LA NAVIGATOION +++++++++++++ -->
	<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

	<!--//// 1. régle de navigation pour : index.xhtml //// -->
	<navigation-rule>

		<!-- 1.1. page de départ -->
		<from-view-id>/index.xhtml</from-view-id>

		<!-- 1.2. cas de navigation : de index.xhtml vers index.xhtml (suppréssion) -->
		<navigation-case>
			<!-- 1.2.1. clé d'outcom -->
			<from-outcome>listEtudiants</from-outcome>
			<!-- 1.2.2. page de destination -->
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<!-- 1.3. cas de navigation : de index.xhtml vers edit_etudiant.xhtml -->
		<navigation-case>
			<from-outcome>editEtudiant</from-outcome>
			<to-view-id>/edit_etudiant.xhtml</to-view-id>
		</navigation-case>

		<!-- 1.4. cas de navigation : index.xhtml vers ajouter_livre.xhtml (modification) -->
		<navigation-case>
			<!-- 1.4.1. clé d'outcom (attribut action de h:commandlink) -->
			<from-outcome>addEtudiant</from-outcome>
			<!-- 1.4.2. page de destination -->
			<to-view-id>/ajouter_etudiant.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>
	
	<!--//// 2. régle de navigation pour : edit_etudiant.xhtml //// -->
	<navigation-rule>

		<!-- 2.1. page de départ -->
		<from-view-id>/edit_etudiant.xhtml</from-view-id>

		<!-- 2.2. cas de navigation : de edit_etudiant.xhtml vers index.xhtml -->
		<navigation-case>
			<!-- 2.2.1. clé d'outcom -->
			<from-outcome>listEtudiants</from-outcome>
			<!-- 2.2.2. page de destination -->
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<!-- //// 3. Règele de navigation pour ajouter_etudiant.xhtml //// -->
	<navigation-rule>
		<!-- 3.1. page de départ -->
		<from-view-id>/ajouter_etudiant.xhtml</from-view-id>

		<!-- 3.2. cas de navigation : ajouter_livre.xhtml vers index.xhtml -->
		<navigation-case>
			<!-- 3.2.1. clé d'outcom (attribut action de h:commandlink) -->
			<from-outcome>listEtudiants</from-outcome>
			<!-- 3.2.2. page de destination -->
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
